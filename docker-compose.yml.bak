version: '3.8'

services:
  # --- Hadoop Ecosystem ---
  namenode:
    image: bde2020/hadoop-namenode:2.0.0-hadoop3.2.1-java8
    container_name: namenode
    volumes:
      - hadoop_namenode:/hadoop/dfs/name
    environment:
      - CLUSTER_NAME=test
    ports:
      - "9870:9870"
      - "9000:9000"
    networks:
      - data-stack

  datanode:
    image: bde2020/hadoop-datanode:2.0.0-hadoop3.2.1-java8
    container_name: datanode
    depends_on:
      - namenode
    volumes:
      - hadoop_datanode:/hadoop/dfs/data
    ports:
      - "9864:9864"
    networks:
      - data-stack

  # --- Spark Ecosystem ---
  spark-master:
    image: bde2020/spark-master:3.1.2-hadoop3.2
    container_name: spark-master
    ports:
      - "8081:8080"
      - "7077:7077"
    environment:
      - INIT_DAEMON_STEP=setup_spark
      - SPARK_CONF_spark_sql_warehouse_dir=/data/warehouse
    volumes:
      - ./spark_jobs:/opt/spark/jobs
      - ./data:/data
    networks:
      - data-stack

  spark-worker:
    image: bde2020/spark-worker:3.1.2-hadoop3.2
    container_name: spark-worker
    depends_on:
      - spark-master
    ports:
      - "8082:8080"
    environment:
      - SPARK_MASTER=spark://spark-master:7077
    networks:
      - data-stack

  # --- Hive Ecosystem ---
  hive-metastore-db:
    image: postgres:13
    container_name: hive-metastore-db
    environment:
      POSTGRES_DB: ${HIVE_METASTORE_DB}
      POSTGRES_USER: ${HIVE_METASTORE_USER}
      POSTGRES_PASSWORD: ${HIVE_METASTORE_PASSWORD}
    volumes:
      - hive_metastore_db_data:/var/lib/postgresql/data
    networks:
      - data-stack

  hive-metastore:
    image: bde2020/hive:2.3.2-postgresql-metastore
    container_name: hive-metastore
    depends_on:
      - hive-metastore-db
    environment:
      SERVICE_PRECONDITION: "hive-metastore-db:5432"
    ports:
      - "9083:9083"
    networks:
      - data-stack

  hive-server:
    image: bde2020/hive:2.3.2-postgresql-metastore
    container_name: hive-server
    depends_on:
      - hive-metastore
      - namenode
      - datanode
    environment:
      HIVE_CORE_CONF_javax_jdo_option_ConnectionURL: "jdbc:postgresql://hive-metastore-db:5432/${HIVE_METASTORE_DB}"
      HIVE_CORE_CONF_javax_jdo_option_ConnectionDriverName: "org.postgresql.Driver"
      HIVE_CORE_CONF_javax_jdo_option_ConnectionUserName: "${HIVE_METASTORE_USER}"
      HIVE_CORE_CONF_javax_jdo_option_ConnectionPassword: "${HIVE_METASTORE_PASSWORD}"
      SERVICE_PRECONDITION: "hive-metastore:9083 namenode:9000 datanode:9864"
    ports:
      - "10000:10000"
      - "10002:10002"
    networks:
      - data-stack

  # --- Airflow Ecosystem ---
  airflow-db:
    image: postgres:13
    container_name: airflow-db
    environment:
      POSTGRES_USER: ${AIRFLOW_DB_USER}
      POSTGRES_PASSWORD: ${AIRFLOW_DB_PASSWORD}
      POSTGRES_DB: ${AIRFLOW_DB_NAME}
    volumes:
      - airflow_db_data:/var/lib/postgresql/data
    networks:
      - data-stack

  airflow-init:
    build:
      context: .
      dockerfile: Dockerfile.airflow
    container_name: airflow-init
    depends_on:
      - airflow-db
    user: "${AIRFLOW_UID:-50000}"
    volumes:
      - ./dags:/opt/airflow/dags
      - ./logs:/opt/airflow/logs
      - ./config/spark:/opt/airflow/config/spark
      - ./config/hadoop:/opt/airflow/config/hadoop
    environment:
      - AIRFLOW__CORE__EXECUTOR=LocalExecutor
      - AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${AIRFLOW_DB_USER}:${AIRFLOW_DB_PASSWORD}@airflow-db:5432/${AIRFLOW_DB_NAME}
      - AIRFLOW__CORE__LOAD_EXAMPLES=False
      - AIRFLOW__CORE__FERNET_KEY=yIkGYM4sjhuCcKI306HUVBzs_fJOEHpfysLnC6cRNKA=
      - _AIRFLOW_DB_UPGRADE=true
      - _AIRFLOW_USERS_CREATE=true
      - _AIRFLOW_WWW_USER_USERNAME=${AIRFLOW_USER}
      - _AIRFLOW_WWW_USER_PASSWORD=${AIRFLOW_PASSWORD}
    command: >
      bash -c "airflow db init && airflow users create --role Admin --username ${AIRFLOW_USER} --password ${AIRFLOW_PASSWORD} --firstname Matheo --lastname Pinget --email matheo.pinget@gmail.com"
    networks:
      - data-stack

  airflow-webserver:
    build:
      context: .
      dockerfile: Dockerfile.airflow
    container_name: airflow-webserver
    restart: always
    depends_on:
      - airflow-init
    user: "${AIRFLOW_UID:-50000}"
    volumes:
      - ./dags:/opt/airflow/dags
      - ./logs:/opt/airflow/logs
      - ./config/spark:/opt/airflow/config/spark
      - ./config/hadoop:/opt/hadoop/etc/hadoop
      - ./scripts:/opt/airflow/scripts
      - ./spark_jobs:/opt/spark/jobs
      - ./data:/data
    environment:
      - AIRFLOW__CORE__EXECUTOR=LocalExecutor
      - AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${AIRFLOW_DB_USER}:${AIRFLOW_DB_PASSWORD}@airflow-db:5432/${AIRFLOW_DB_NAME}
      - AIRFLOW__CORE__FERNET_KEY=yIkGYM4sjhuCcKI306HUVBzs_fJOEHpfysLnC6cRNKA=
      - AIRFLOW__CORE__PARALLELISM=4
      - AIRFLOW__CORE__DAG_FILE_PROCESSOR_TIMEOUT=600
      - AIRFLOW__CORE__DAGBAG_IMPORT_TIMEOUT=120
      - AIRFLOW__LOGGING__LOGGING_LEVEL=INFO
    ports:
      - "8080:8080"
    environment:
      - AIRFLOW__CORE__EXECUTOR=LocalExecutor
      - AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${AIRFLOW_DB_USER}:${AIRFLOW_DB_PASSWORD}@airflow-db:5432/${AIRFLOW_DB_NAME}
      - AIRFLOW__CORE__FERNET_KEY=yIkGYM4sjhuCcKI306HUVBzs_fJOEHpfysLnC6cRNKA=
      - SPARK_CONF_spark_jars_packages=org.postgresql:postgresql:42.5.0,com.crealytics:spark-excel_2.12:3.3.1_0.18.7
    command: webserver
    networks:
      - data-stack

  airflow-scheduler:
    build:
      context: .
      dockerfile: Dockerfile.airflow
    container_name: airflow-scheduler
    restart: always
    depends_on:
      - airflow-init
    user: "${AIRFLOW_UID:-50000}"
    volumes:
      - ./dags:/opt/airflow/dags
      - ./logs:/opt/airflow/logs
      - ./config/spark:/opt/airflow/config/spark
      - ./config/hadoop:/opt/hadoop/etc/hadoop
      - ./spark_jobs:/opt/spark/jobs
      - ./config/hadoop:/opt/airflow/config/hadoop
      - ./scripts:/opt/airflow/scripts
    environment:
      - AIRFLOW__CORE__EXECUTOR=LocalExecutor
      - AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${AIRFLOW_DB_USER}:${AIRFLOW_DB_PASSWORD}@airflow-db:5432/${AIRFLOW_DB_NAME}
      - AIRFLOW__CORE__FERNET_KEY=yIkGYM4sjhuCcKI306HUVBzs_fJOEHpfysLnC6cRNKA=
      - SPARK_CONF_spark_jars_packages=org.postgresql:postgresql:42.5.0,com.crealytics:spark-excel_2.12:3.3.1_0.18.7
    command: scheduler
    networks:
      - data-stack

volumes:
  hadoop_namenode:
  hadoop_datanode:
  hive_metastore_db_data:
  airflow_db_data:

networks:
  data-stack:
    driver: bridge